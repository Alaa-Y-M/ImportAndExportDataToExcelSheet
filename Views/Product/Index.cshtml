@addTagHelper *,ReflectionIT.Mvc.Paging
@model IPagingList<CiscoPSSProducts>
 
<div class="row">
    <div class="col-md-3">
        <a asp-action="ExportToExcel" asp-controller="product" class="btn btn-outline-warning">
            Export to Excel
        </a>
    </div>
    <div class="col-md-3">
        <a asp-action="BatchUpload" asp-controller="product" class="btn btn-outline-success">
            Import from Excel
        </a>
    </div>
    <div class="col-6 mb-3">
    <form class="d-flex justify-content-center w-auto">
        <input class="form-control me-2" name="search" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-dark" type="submit">Search</button>
    </form>
</div>  
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-sm mt-3 table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <td>Band</td>
                    <td>CategoryCode</td>
                    <td>Manufacturer</td>
                    <td>ItemDescription</td>
                    <td>PartSKU</td>
                    <td>DiscountPrice</td>
                    <td>ListPrice</td>
                    <td>MinDiscount</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Band</td>
                        <td>@product.CategoryCode</td>
                        <td>@product.Manufacturer</td>
                        <td>@product.ItemDescription</td>
                        <td>@product.PartSKU</td>
                        <td>@product.DiscountPrice</td>
                        <td>@product.ListPrice</td>
                        <td>@product.MinDiscount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>
<div class="row mb-3">
    <vc:pager paging-list="@Model"></vc:pager>
</div>